<%- include ("../partials/header") %>
<div class="row justify-content-center">
    <div class="col-12 text-center my-4">
        <h1>Edit Comment</h1>
    </div>
    <div class="col-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <!-- <input class="form-control" type="text" name="comment[text]" value=""> -->
                <textarea class="form-control" name="comment[text]" cols="30" rows="2"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") %>